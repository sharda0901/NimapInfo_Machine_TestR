@model MVC_Nimap_MachineTest.Models.CategoryModel


@using (Html.BeginForm("SaveOrUpdate", "Category", FormMethod.Post))
{
    <h5 class="font-weight-bolder text-center bg-dark text-white">
        Category

    </h5>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label class="fw-bold">Category</label>
                @Html.HiddenFor(m => m.CategoryId)
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
            </div>
        </div>


    </div>

    <div class="form-group mt-4 mb-0 form-actions">
        <button type="submit" class="btn btn-dark" id="btnsubmit"> Save Record </button>
    </div>
}
